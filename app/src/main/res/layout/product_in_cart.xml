<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_corners"
    android:padding="8dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/cartPicProd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Product Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Product Name -->
    <TextView
        android:id="@+id/nameInCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/deleteCart"
        app:layout_constraintStart_toEndOf="@id/cartPicProd"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Product Price -->
    <TextView
        android:id="@+id/priceInCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="₸1200"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/deleteCart"
        app:layout_constraintStart_toEndOf="@id/cartPicProd"
        app:layout_constraintTop_toBottomOf="@id/nameInCart" />

    <!-- Product Quantity -->
    <TextView
        android:id="@+id/quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Количество: 2"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/deleteCart"
        app:layout_constraintStart_toEndOf="@id/cartPicProd"
        app:layout_constraintTop_toBottomOf="@id/priceInCart" />

    <!-- Delete Button -->
    <ImageView
        android:id="@+id/deleteCart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Delete Button"
        android:src="@drawable/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>